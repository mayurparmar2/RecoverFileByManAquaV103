<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="">
        <item name="android:windowAnimationStyle">@style/AppTheme.WindowTransition</item>
        <item name="colorAccent">@color/light_rad</item>
        <item name="colorPrimary">@color/light_rad</item>
        <item name="colorPrimaryDark">@color/light_rad</item>
    </style>


    <style name="textsizetoolbar" parent="">
        <item name="android:textSize">@dimen/size_toolbar</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="AppOptionStyle" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="AppOptionButtonStyle" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#191f26</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>


    <style name="MineCustomTabText" parent="">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_gray4</item>
        <item name="fontFamily">@font/rubik_regular</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="SpinKitView" parent="">
        <item name="android:maxWidth">48dp</item>
        <item name="android:maxHeight">48dp</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="AppTheme.WindowTransition" parent="@style/AppTheme">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CustomBottomSheet" parent="">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">@null</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>

    <style name="Theme.DataRecoveryPhotoRecovery" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/bg_main</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorPrimary">@color/light_rad</item>
        <item name="colorPrimaryVariant">@color/light_rad</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
    </style>

    <style name="Theme_AppCompat_Light_NoActionBar_FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FileProtection" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/light_rad</item>
        <item name="colorAccent">@color/light_rad</item>
    </style>

</resources>
